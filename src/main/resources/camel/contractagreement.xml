<routes xmlns="http://camel.apache.org/schema/spring">
    <route id="contractAgreementHandler">

        <onException>
            <exception>io.dataspaceconnector.exceptions.MessageRequestException</exception>
            <to uri="direct:handleMessageRequestException"/>
        </onException>

        <onException>
            <exception>io.dataspaceconnector.exceptions.ContractException</exception>
            <to uri="direct:handleContractException"/>
        </onException>

        <onException>
            <exception>io.dataspaceconnector.exceptions.UnconfirmedAgreementException</exception>
            <to uri="direct:handleUnconfirmedAgreementException"/>
        </onException>

        <from uri="direct:contractAgreementHandler"/>
        <to uri="direct:ids-validation"/>
        <process ref="AgreementDeserializer"/>
        <process ref="AgreementComparisonProcessor"/>
        <!-- TODO send agreement to clearing house -->
    </route>
</routes>
